<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagem.MainPage"
             Title="Custo Viagem">


    <ScrollView>
        <StackLayout>

            <Label Text="Origem:" />
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:" />
            <Entry BindingContext="destino" x:Name="txt_destino" />

            <Label Text="Distancia" />
            <Entry BindingContext="distancia" x:Name="txt_distancia" />

            <Label Text="Rendimento" />
            <Entry BindingContext="rendimento" x:Name="txt_rendimento" />

            <Label Text="Preço Combustivel" />
            <Entry BindingContext="valor_combustivel" x:Name="txt_combustivel" />

            <Button Margin="5" x:Name="btn_createPedagio" Text="Adicionar pedagio" Clicked="btn_createPedagio_Clicked"/>
            <Button Margin="5" x:Name="btn_listPedagio" Text="Lista pedagio" Clicked="btn_listPedagio_Clicked"/>
            <Button Margin="5" x:Name="btn_calcular" Text="Calcular" Clicked="btn_calcular_Clicked"/>

        </StackLayout>
    </ScrollView>


</ContentPage>
